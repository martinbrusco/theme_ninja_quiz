<odoo>
    <template id="quiz_play_template" name="Quiz Play Page">
        <t t-call="website.layout">
            <!-- Aquí, el enlace del CSS debe estar dentro del bloque t-call -->
            <t t-set="assets" t-value="{
                'css': ['/ninja_quiz/static/src/css/quiz_styles.css'],
                'js': []}"/>
            <div class="quiz-container">
                <h1>Bienvenido al Quiz!</h1>
                <p>Ingresa el pin y juega como un Ninja</p>
                <form action="/join" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="text" name="pin" placeholder="Ingresa tu PIN" required="required"/>
                    <button type="submit" class="btn btn-primary">Unirme</button>
                </form>
            </div>
        </t>
    </template>

    <template id="quiz_join_template" name="Quiz Join Page">
        <t t-call="website.layout">
            <t t-set="assets" t-value="{
                'css': ['/ninja_quiz/static/src/css/quiz_styles.css'],
                'js': []}"/>
            <div class="join-container">
                <h1>¡Gracias por unirte!</h1>
                <p>Tu PIN es: <strong t-esc="pin"/></p>
            </div>
        </t>
    </template>
</odoo>
