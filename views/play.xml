<odoo>
<template id="play_page_template" name="Ninja Quiz Play">
    <t t-call="theme_ninja_quiz.layout">
        <main class="ninja-quiz-container">
            <div class="ninja-quiz-card">
                <h1 class="title">Â¡Ninja Quiz!</h1>
                <div class="survey-runner-mount"/>
            </div>
        </main>
    </t>
</template>

<template id="SurveyRunner" name="Survey Runner Component">
    <div class="survey-runner-container">
        <h2 t-esc="state.questions[state.currentQuestionIndex].title"/>
        <div class="options-container">
            <t t-foreach="state.questions[state.currentQuestionIndex].options" t-as="option">
                <div class="option" t-att-data-option-id="option.id">
                    <t t-esc="option.text"/>
                </div>
            </t>
        </div>
    </div>
</template>





<template id="show_pin_template" name="Mostrar PIN">
  <t t-call="theme_ninja_quiz.layout">
    <main class="ninja-quiz-container">
      <div class="ninja-quiz-card">
        <h2 class="title">PIN ingresado:</h2>
        <p t-esc="pin" class="pin-output"/>
      </div>
    </main>
   </t> 
</template>



</odoo>
