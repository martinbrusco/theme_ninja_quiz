<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="play_page_template" name="Ninja Quiz Play">
        <t t-call="theme_ninja_quiz.layout">
            <main>
                <h1 class="title" t-out="play_page_title"/>
                <t t-call="theme_ninja_quiz.s_quiz_play">
                    <t t-set="survey_id" t-value="survey_id"/>
                    <t t-set="survey_exists" t-value="survey_exists"/>
                    <t t-set="token" t-value="token"/>
                    <t t-set="token_valid" t-value="token_valid"/>
                </t>
                <footer class="mt-3">
                    <p class="p-footer" t-out="footer_text"/>
                </footer>
            </main>
        </t>
    </template>
</odoo>