<odoo>
    <template id="play_page_template" name="Ninja Quiz Play">
        <t t-call="theme_ninja_quiz.layout">
            <!-- Forzar la carga del bundle web.assets_frontend -->
            <t t-call-assets="web.assets_frontend" t-js="true" t-css="false"/>
            <main class="ninja-quiz-container">
                <div class="ninja-quiz-card">
                    <h1 class="title">¡Ninja Quiz!</h1>
                    <div id="kahoot-survey-runner-placeholder"></div>
                </div>
            </main>
            <footer class="mt-3">
                <p class="p-footer">Crea tu propio Quiz como un Ninja</p>
            </footer>
        </t>
    </template>

    <template id="KahootSurveyRunner" name="Kahoot Survey Runner">
        <div class="survey-runner">
            <h2>Bienvenido al Quiz</h2>
            <p>¡Cargando preguntas...</p>
        </div>
    </template>
</odoo>
