<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="components_library" name="Componentes - Ninja Quiz">
    <t t-call="theme_ninja_quiz.layout">
      <main class="components-gallery">
        
        <!-- SECCIÓN PARA FONDOS OSCUROS (componentes con texto claro) -->
        <div class="gallery-section dark-bg">
          <h2 class="section-title">Componentes para fondos oscuros</h2>
          
          <!-- Componente p-footer -->
          <div class="component-container">
            <div class="component-preview">
              <p class="p-footer">Crea tu propio Quiz como un Ninja</p>
            </div>
            <span class="component-label">Clase: .p-footer</span>
          </div>
          
          <!-- Componentes de footer -->
          <div class="component-container">
            <div class="component-preview">
              <div class="footer-nav__title" aria-label="About">Títulos de footer</div>
              <a href="#" class="footer-nav__link">Enlace de footer</a>
              <span class="copyright">Copyright © 2025 Ninja Quiz</span>
            </div>
            <span class="component-label">Clases: .footer-nav__title, .footer-nav__link, .copyright</span>
          </div>
          
          <!-- Botones claros -->
          <div class="component-container">
            <div class="component-preview">
              <a href="#" class="btn-learn-more">Learn more</a>
              <br/>
              <a href="#" class="btn-contact-sale">Contact sales</a>
            </div>
            <span class="component-label">Clases: .btn-learn-more, .btn-contact-sale</span>
          </div>
          
        </div>
        
        <!-- SECCIÓN PARA FONDOS CLAROS (componentes con texto oscuro) -->
        <div class="gallery-section light-bg">
          <h2 class="section-title">Componentes para fondos claros</h2>
          
          <!-- Títulos -->
          <div class="component-container">
            <div class="component-preview">
              <h1 class="title">Título h1</h1>
              <h2 class="mosaic-hero__title">Título h2</h2>
            </div>
            <span class="component-label">Clases: .title, .mosaic-hero__title</span>
          </div>
          
          <!-- Botones oscuros -->
          <div class="component-container">
            <div class="component-preview">
              <button class="join-button">Ingresar</button>
              <br/>
              <a href="#" class="btn-subscribe">Sign up FREE</a>
            </div>
            <span class="component-label">Clases: .join-button, .btn-subscribe</span>
          </div>
          
          <!-- Inputs -->
          <div class="component-container">
            <div class="component-preview">
              <input type="text" class="pin-input" placeholder="PIN del juego"/>
              <br/>
              <label for="username" class="login-label">Usuario</label>
              <input type="text" id="username" class="login-input" placeholder="Nombre de usuario"/>
            </div>
            <span class="component-label">Clases: .pin-input, .login-label, .login-input</span>
          </div>
          
          <!-- Botones especiales -->
          <div class="component-container">
            <div class="component-preview">
              <a href="#" class="btn-news">
                <span class="menu-news-icon"></span>
                <span>News</span>
                <span class="notification-bubble">3</span>
              </a>
              <br/>
              <a href="#" class="btn-create-kahoot">
                <img src="/theme_ninja_quiz/static/src/img/plus-icon.png" alt="Plus icon"/>
                Create a quiz!
              </a>
            </div>
            <span class="component-label">Clases: .btn-news, .btn-create-kahoot</span>
          </div>
          
          <!-- Textos varios -->
          <div class="component-container">
            <div class="component-preview">
              <p class="custom-paragraph">Párrafo de ejemplo con texto normal</p>
              <p class="paragraph-strong">
                <strong>Párrafo Strong con texto resaltado</strong>
              </p>
            </div>
            <span class="component-label">Clases: .custom-paragraph, .paragraph-strong</span>
          </div>
          
        </div>
        
      </main>
    </t>
  </template>
</odoo>